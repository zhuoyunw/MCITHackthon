<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>To Do List</title>
    <link rel="stylesheet" href="css/styles.css">
  </head>
  <body>
  <h3>Welcome! <%= nameOfUsr %></h3>
<div>
  <span id="Philadelphia_z161" style="font-size:80px; margin: 0px auto"></span>
  <script src="//widget.time.is/t.js"></script>
  <script>
    time_is_widget.init({Philadelphia_z161:{time_format:"12hours:minutesAMPM"}});
  </script>
</div>


  <div class="box" id="heading">
    <h1> <%=listTitle%></h1>
  </div>
<div class="box">
    <% newListItems.forEach(function (item){ %>
  <form action="/delete" method="post">
    <div class="item">
      <input type="checkbox" name="checkbox" value = "<%=item.id%>" onchange="this.form.submit()">
      <p><%=item.todoData%></p>
    </div>
    <input type="hidden" name="listName" value="<%= listTitle %>">
    <input type="hidden" name="nameOfUsr" value="<%= nameOfUsr %>">
  </form>

  <%}) %>

  <form class="" action="/today" method="post">
    <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
    <button type="submit" name="list" value="<%= listTitle %>">+</button>
  </form>
</div>

<div>
  <a href="/logout"><button type="submit" name="logOut">Log out</button></a>
</div>
  </body>
</html>
